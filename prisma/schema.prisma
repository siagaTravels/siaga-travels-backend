// Prisma schema for Siyoga Travels Backend
// Documentation: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Destination {
  id                    BigInt    @id @default(autoincrement())
  createdAt             DateTime  @default(now()) @map("created_at")
  slug                  String    @unique
  name                  String?
  subtitle              String?
  description           String?
  longDescription       String?   @map("longDescription")
  experience            String?
  location              String?
  province              String?
  image                 String?
  gallery               String[]
  rating                Float?
  reviews               BigInt?
  bestSeason            String[]  @map("bestSeason")
  category              String?
  difficulty            String?
  distanceFromColombo   String?   @map("distanceFromColombo")
  duration              String?
  gradient              String?
  highlights            String[]
  whyVisit              String[]  @map("whyVisit")
  tips                  String[]
  nearbyPlaces          String[]  @map("nearbyPlaces")
  popularity            BigInt?
  price                 String?
  travelTimeFromColombo String?   @map("travelTimeFromColombo")

  @@map("destinations")
}
